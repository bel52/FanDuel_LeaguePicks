version: "3.9"

services:
  web:
    build: .
    container_name: dfs-web
    ports:
      - "8010:8000"
    env_file:
      - .env
    depends_on:
      - redis
    volumes:
      - ./data:/app/data
      - ./logs:/app/logs
    restart: unless-stopped
    environment:
      - PYTHONPATH=/app

  redis:
    image: redis:7-alpine
    container_name: dfs-redis
    restart: unless-stopped

volumes:
  redis_data:
